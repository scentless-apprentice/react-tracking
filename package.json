{
  "name": "tracking-schema",
  "version": "2.3.0",
  "description": "Tracking object schema and validation",
  "main": "build/index.js",
  "scripts": {
    "lint": "eslint ./src",
    "test": "jest",
    "test-watch": "jest --watch",
    "build":
      "rm -rf build && babel src --out-dir build --ignore **/__tests__,src/documentation,src/example",
    "documentation": "node src/documentation/index.js",
    "prettier": "prettier \"src/**/*.js\" --write",
    "precommit": "npm run build; npm run documentation; lint-staged"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nytm/tracking-schema.git"
  },
  "keywords": ["nyt", "tracking", "schema"],
  "author": "The New York Times",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/nytm/tracking-schema/issues"
  },
  "homepage": "https://github.com/nytm/tracking-schema#readme",
  "dependencies": {
    "ajv": "^6.0.1",
    "es6-template-strings": "^2.0.1"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-plugin-preval": "^1.6.3",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "eslint": "^4.15.0",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-prettier": "^2.5.0",
    "husky": "^0.14.3",
    "jest": "^22.1.2",
    "lint-staged": "^6.0.0",
    "prettier": "^1.10.2",
    "prettier-eslint": "^8.8.0"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "es5",
    "arrowParens": "avoid",
    "printWidth": 100
  },
  "lint-staged": {
    "*.{js,json,css,md}": ["prettier --write", "git add"]
  }
}
